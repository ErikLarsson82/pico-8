--draw

function _draw()
 cls(1)
 map(m*16)
 
 for p in all(players) do
 	spr(16+(p.idx*2)+p.f,p.x,p.y)
 
	 if han==p.idx then
	  if cooldown==0 then
	   spr(4,p.x,p.y)
	  else
	   spr(5,p.x,p.y)
	  end
	 end
	end
end
