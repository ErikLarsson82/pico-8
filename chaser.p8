--boost

function add_boost()
	local x=0
	local y=0
	while collide(x*8,y*8,0) or
							collide(x*8,y*8,1) or
							collide(x*8,y*8,2) do
	 x=rnd(15)
	 y=rnd(15)
	end
	mset(x,y,10)
end

