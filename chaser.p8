--tile_timer

function tile_timer()
 t_timer+=1
 local t=100
 
 if t_timer==t/2 then
  for tx=0,15 do
   for ty=0,15 do
  	 if fget(mget(tx,ty),2) then
  	 	mset(tx,ty,9)
  	 end
  	end
  end
 end
 if t_timer==t then
  t_timer=0
  for tx=0,15 do
   for ty=0,15 do
  	 if fget(mget(tx,ty),2) then
  		 mset(tx,ty,8)
  	 end
  	end
  end
 end
end
